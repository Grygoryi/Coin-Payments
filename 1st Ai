<body>
    <div class="container">
        <h2>Secure Payment</h2>
        <p>Amount: <span id="amount"></span> <span id="currency"></span></p>
        <p>Order ID: <span id="order_id"></span></p>
        <a id="payButton" class="button" href="#" target="_blank">Pay Now</a>
    </div>
    
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const urlParams = new URLSearchParams(window.location.search);
            const amount = urlParams.get('amount') || '0';
            const currency = urlParams.get('currency') || 'USDT';
            const orderId = urlParams.get('order_id') || 'N/A';
            const paymentLink = urlParams.get('payment_link') || '#';

            document.getElementById('amount').textContent = amount;
            document.getElementById('currency').textContent = currency;
            document.getElementById('order_id').textContent = orderId;
            document.getElementById('payButton').href = paymentLink;
        });
    </script>
</body>
